var answer = prompt("what system you game on, brah?","Type your fave console/handheld here")// Write your code below!

switch(answer)  {
    case'DS':
        console.log("That's cool!")
        for(i=0;i<=4;i++) {
            console.log(answer + " is my favorite too!")
            j=i
            while(j<=3){
                console.log("gaming")
                j++
            }
        }
    break;
    case'PS4':
        var games=prompt("How many games do you have?")
        console.log("Add me! blakezilla26!")
        if (games>10){
            console.log("Wow, that's a lot of games, maybe we can play some together")
        }
        else {
            console.log("Hmm, I wonder if we have any of the same games...")
        }
        break;
    case'Wii':
        console.log("I like the classics, mario, zelda, etc!")
        break;
    default:
        console.log("I don't know what that is...")
        break;
};
